# Vercel Environment Variables
# Copy this file to .env.local for local development
# Set these in Vercel Dashboard for production deployment

# Core Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Payment Integration (Required for payment functions)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# Email Providers (At least one required for email functions)
SENDER_API_KEY=your-sender-api-key
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# Shipping Providers (Optional - functions will use fallbacks)
COURIER_GUY_API_KEY=your-courier-guy-api-key
FASTWAY_API_KEY=your-fastway-api-key
SHIPLOGIC_API_KEY=your-shiplogic-api-key

# Frontend Configuration (Optional)
FRONTEND_URL=https://your-frontend-domain.vercel.app
VITE_API_BASE_URL=https://your-api-domain.vercel.app
VITE_USE_VERCEL_API=true

# Development Only
NODE_ENV=production
