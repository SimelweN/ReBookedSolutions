    Content-Security-Policy: frame-src 'self' https://js.paystack.co https://checkout.paystack.com https://vercel.live; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.paystack.co https://cdn.gpteng.co; connect-src 'self' https://vercel.live wss://vercel.live; object-src 'none';
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
